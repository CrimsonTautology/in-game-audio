<div class="row song-info <%= bootstrap_class_for_song song %>">
  <div class="col-md-9">
    <div class="row">

      <div class="col-md-6">
        <h4>
          <%= link_to song.to_s, song %>
          <small><%= song.full_path %></small>
        </h4>


        <p>
          <%= link_to fa_icon("copy"), "#",
            {
            "data-clipboard-text" => song.to_p_command,
            title: "copy path to clipboard",
            class: "btn btn-success btn-xs zeroclipboard-btn"
          } %>
        <% if can? :edit, song %>
          <%= link_to fa_icon("edit"), edit_song_path(song), { title: "edit", class: "btn btn-info btn-xs" } %>
        <% end %>

        <% if can? :play, song %>
          <%= link_to fa_icon("play"), play_song_path(song), { title: "play", class: "btn btn-warning btn-xs" } %>
        <% end %>
      </p>

    </div><!-- col -->

    <div class="col-md-6" >
      <dl class="dl-horizontal" >
        <dt>Uploaded</dt>
        <dd><%= song.created_at.to_date %></dd>

        <dt>by</dt>
        <dd><%= link_to song.uploader.nickname, song.uploader %></dd>

        <dt>Duration</dt>
        <dd><%= song.duration_formated %></dd>

        <dt>File Size</dt>
        <dd><%= number_to_human_size song.sound_file_size %></dd>
      </dl>
    </div><!-- col -->

  </div><!-- row -->
</div><!-- col -->

</div><!-- row -->

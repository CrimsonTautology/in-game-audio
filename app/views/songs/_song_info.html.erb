<div class="row song-info">
  <div class="col-md-8">
    <div class="row">

      <div class="col-md-6">
        <h4><%= link_to song.to_s, song %> <small><%= song.full_path %></small></h4>
        <p>
          uploaded by <%= link_to song.uploader.nickname, song.uploader %>
        </p>
      </div><!-- col -->

      <div class="col-md-6" >
        <dl class="dl-horizontal" >
          <dt>Uploaded</dt>
          <dd><%= song.created_at.to_date %></dd>

          <dt>Duration</dt>
          <dd><%= song.duration_formated %></dd>

          <dt>File Size</dt>
          <dd><%= number_to_human_size song.sound_file_size %></dd>
        </dl>
      </div><!-- col -->

    </div><!-- row -->
  </div><!-- col -->

</div><!-- row -->

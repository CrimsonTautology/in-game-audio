<% content_for :title, "Edit #{@song.full_path}" %>

<%= simple_form_for @song do |f| %>
  <%= f.input :name, required: true  %>

  <%= f.input :directory_id, collection: @directories, label_method: :to_label, required: true, input_html: { value: @song.directory_id } %>

  <%= f.input :title %>
  <%= f.input :artist %>
  <%= f.input :album %>

  <% if can? :map_themeable, @song %>
    <%= f.input :map_themeable %>
    <%= f.input :halloween_themeable %>
    <%= f.input :christmas_themeable %>
  <% end %>
  <% if can? :user_themeable, @song %>
    <%= f.input :user_themeable %>
  <% end %>

  <%= f.button :submit, class: "btn btn-success" %>
<% end %>

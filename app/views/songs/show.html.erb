<h1><%= @song.full_path %></h1>
<% if can?(:play, @song) %>
<audio src="<%= @song.sound.url %>" controls autoplay >
  <p>Browser does not support this audio player</p>
</audio>
<% end %>
<p><%= @song.title %></p>
<p><%= @song.album %></p>
<p><%= @song.artist %></p>
<p><%= @song.duration_formated %>
<p>Song has been played <%= @song.play_count %> times</p>
